{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <section class="nav-page">
        {% if page > 1 %}
            <a href="{{ path('wish_list', { page: page - 1 }) }}">Page précédente</a>
        {% endif %}
        {% if page < total_pages %}
            <a href="{{ path('wish_list', { page: page + 1 }) }}">Page suivante</a>
        {% endif %}
    </section>
    <div class="page-container">
        <h2 class="uk-heading-line uk-text-center"><span>LISTES DES SOUHAITS</span></h2>

        <div class="uk-grid-small uk-child-width-1-3@s uk-text-center" uk-grid>
            {% for wish in wishes %}
                <div>
                    <div class="uk-card uk-card-body">
                        <h3 class="uk-card-title">{{ wish.title }}</h3>
                        <a href="{{ path('wish_detailpage', {'id': wish.id}) }}" class="uk-button uk-button-primary">
                            Voir le détail
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
